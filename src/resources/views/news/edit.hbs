<div class="mt-4">
    <h3>Cập nhật bài viết</h3>

    <form class="mt-4" method="POST" action="/news/{{news._id}}?_method=PUT">
        <div class="form-group">
            <label for="title">Tiêu đề bài viết</label>
            <input type="text" class="form-control" value="{{news.title}}" id="title" name="title">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" id="description" name="description">{{news.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="image">Hình ảnh</label>
            <input type="text" class="form-control" value="{{news.image}}" id="image" name="image">
        </div>
        <div class="form-group">
            <label for="content">Nội dung</label>
            <textarea class="form-control" id="content" name="content">{{news.content}}</textarea>
        </div>

        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>